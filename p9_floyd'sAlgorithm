#include <iostream.h>
#include <conio.h>

#define INF 999

void main()
{
    int n, a[10][10], i, j, k;

    clrscr();

    cout << "Enter number of vertices\n";
    cin >> n;

    cout << "Enter cost matrix (999 for infinity)\n";
    for (i = 1; i <= n; i++)
        for (j = 1; j <= n; j++)
            cin >> a[i][j];

    for (k = 1; k <= n; k++)
        for (i = 1; i <= n; i++)
            for (j = 1; j <= n; j++)
                if (a[i][j] > a[i][k] + a[k][j])
                    a[i][j] = a[i][k] + a[k][j];

    cout << "All pairs shortest path matrix is:\n";
    for (i = 1; i <= n; i++)
    {
        for (j = 1; j <= n; j++)
            cout << a[i][j] << " ";
        cout << "\n";
    }

    getch();
}
