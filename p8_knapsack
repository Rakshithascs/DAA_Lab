#include <iostream.h>
#include <conio.h>

int max(int a, int b)
{
    return (a > b) ? a : b;
}

void main()
{
    int n, w[10], p[10], W;
    int i, j;
    int v[10][10];

    clrscr();

    cout << "Enter number of items\n";
    cin >> n;

    cout << "Enter weights of items\n";
    for (i = 1; i <= n; i++)
        cin >> w[i];

    cout << "Enter profits of items\n";
    for (i = 1; i <= n; i++)
        cin >> p[i];

    cout << "Enter capacity of knapsack\n";
    cin >> W;

    for (i = 0; i <= n; i++)
    {
        for (j = 0; j <= W; j++)
        {
            if (i == 0 || j == 0)
                v[i][j] = 0;
            else if (w[i] <= j)
                v[i][j] = max(v[i - 1][j],
                              p[i] + v[i - 1][j - w[i]]);
            else
                v[i][j] = v[i - 1][j];
        }
    }

    cout << "Maximum profit is: " << v[n][W];

    getch();
}
