#include <iostream.h>
#include <conio.h>

int n, a[10][10], indeg[10];

void main()
{
    int i, j, k, v, count = 0;
    clrscr();

    cout << "Enter number of vertices\n";
    cin >> n;

    cout << "Enter adjacency matrix\n";
    for (i = 1; i <= n; i++)
    {
        for (j = 1; j <= n; j++)
            cin >> a[i][j];
    }

    for (i = 1; i <= n; i++)
    {
        indeg[i] = 0;
        for (j = 1; j <= n; j++)
            indeg[i] += a[j][i];
    }

    cout << "Topological Ordering is:\n";

    while (count < n)
    {
        for (k = 1; k <= n; k++)
        {
            if (indeg[k] == 0)
            {
                cout << k << " ";
                indeg[k] = -1;
                for (i = 1; i <= n; i++)
                    if (a[k][i] == 1)
                        indeg[i]--;
                count++;
            }
        }
    }

    getch();
}
